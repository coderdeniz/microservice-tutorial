@model FreeCourse.Web.Models.SigninInput


<div class="row">
   <div class="col-md-4 offset-md-4">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Üye Giriş</h5>
                  <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                  <form asp-controller="Auth" asp-action="SignIn" method="post">
                      <div class="row mb-3">
                        <label asp-for="Email" for="inputEmail3" class="col-sm-12 col-form-label"></label>
                         <div class="col-sm-10">
                          <input type="email" asp-for="Email" class="form-control" id="inputEmail3">
                        </div>
                        <span class="text-danger" asp-validation-for="Email"></span>
                      </div>
                      <div class="row mb-3">
                        <label for="inputPassword3" asp-for="Password" class="col-sm-12 col-form-label"></label>
                        <div class="col-sm-10">
                          <input asp-for="Password" type="password" class="form-control" id="inputPassword3">
                        </div>
                        <span class="text-danger" asp-validation-for="Password"></span>
                      </div>
                      <div class="mb-3 form-check">
                          <input type="checkbox" asp-for="IsRemember" class="form-check-input"/>
                          <label class="form-check-label" asp-for="IsRemember"></label>
                      </div>                      
                      <button type="submit" class="btn btn-primary">Giriş Yap</button>
                  </form>
            </div>
        </div>
   </div>
</div>
